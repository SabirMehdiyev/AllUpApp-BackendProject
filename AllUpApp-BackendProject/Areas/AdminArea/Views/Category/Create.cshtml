@model CreateCategoryVM
@{
    ViewData["Title"] = "Category Create";
}


<div class="container mt-5">
    <div class="row">
        <form method="post" enctype="multipart/form-data" style="color:black;">
            <div class="form-group">
                <label asp-for="IsMain"></label>
                <input asp-for="IsMain">
            </div>
            <div id="CategoryPhoto" class="form-group">
                <label asp-for="Photo"></label>
                <input class="form-control" asp-for="Photo">
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name">
            </div>
            <div class="form-group" id="CategoryParent" >
                <label asp-for="ParentId"></label>
                <br>
                <select asp-for="ParentId" class="form-select" aria-label="Default select example" asp-items="@ViewBag.Categories">
                </select>
            </div>
            <br>
            <br>
            <button type="submit" class="btn btn-primary">Create Category</button>
        </form>
    </div>
</div>




@section Scripts{
    <script>
        $(document).ready(function () {
            if (!($("#IsMain").is(":checked"))){
                $("#CategoryPhoto").addClass("d-none");
            }

            $("#IsMain").click(function(){
                $("#CategoryPhoto").toggleClass("d-none");
                $("#CategoryParent").toggleClass("d-none");
            })
        })
    </script>
}






